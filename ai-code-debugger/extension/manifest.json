{
  "manifest_version": 3,
  "name": "AI Code Debugger",
  "version": "1.0.0",
  "description": "Proactively debugs AI-generated code before you run it",
  "permissions": [
    "activeTab",
    "storage",
    "clipboardRead"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://localhost:3000/*",
    "https://*.github.dev/*",
    "https://*.vscode.dev/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.github.dev/*",
        "https://*.vscode.dev/*",
        "https://codesandbox.io/*",
        "https://replit.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["details.html", "details.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
